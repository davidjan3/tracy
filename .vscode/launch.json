  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Build",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "build"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["start"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build & Run",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "preLaunchTask": "build",
      "args": ["start"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "SyncDB",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "syncdb"]
    }
  ]
}
